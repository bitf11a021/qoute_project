@model QuotesProj.Models.Quotes

<html>
<head>
    <title>Profile</title>
    <link href="~/content/style.css" rel="stylesheet" type="text/css">
</head>

<body>
    <div class="main">
        <div class="page">
            <div class="header">
                <div class="header-img">
                    <h1>Best Quotes</h1>
                    <p>online repository of user contributed quotes</p>
                </div>
                <div class="menu">

                    <ul>
                        <li><a href="/Home/Home">Home</a></li>

                        <li><a href="/SearchByCatogary/SearchForMembers">Quotes Images</a></li>
                        <li><a href="/Contact_us/Contact_usForMembers">Contact Us</a></li>
                        <li><a href="/Home/Logout">Logout</a></li>
                        <li style="color:white; margin-left:45%">Hi, @Request.Cookies["Username"].Value</li>
                    </ul>
                </div>
            </div>


            <div class="content">
                <div class="left-panel">
                    <div class="left-panel-in">

                        <form action="/Post/SavePost" method="post">

                            Quote: <br />
                            <textarea rows="4" cols="50" placeholder="Enter quote here" id="quoteText" name="quote_text"></textarea>

                            <select id="category" name="category">
                                <option value="best">Best</option>
                                <option value="education">Education</option>
                                <option value="love">Love</option>
                                <option value="sad">Sad</option>
                                <option value="sad">Friendship</option>
                            </select>
                            Author: <input type="text" id="authorName" name="author_name"><br>
                            <input type="submit" value="Post">
                        </form>
                        <br>
                        <a href="\Profile\Profile">GO TO PROFILE<br>   </a>
                    </div>
                </div>
                <div class="right-panel">
                    <div class="right-panel-in">

                        <h3>Categories</h3>
                        <ul>
                            <li><a href="/Category/CategoryForMembers?type=best">Best<br></a></li>
                            <li><a href="/Category/CategoryForMembers?type=sad">Sad<br></a></li>
                            <li><a href="/Category/CategoryForMembers?type=education">Education<br></a></li>
                            <li><a href="/Category/CategoryForMembers?type=love">Love<br></a></li>
                            <li><a href="/Category/CategoryForMembers?type=friendship">Friendship<br></a></li>
                            <li><a href="/SearchByCatogary/SearchByCatogaryForMembers">Search<br></a></li>
                        </ul>

                        <p>&nbsp;</p>
                        <p>&nbsp;</p>
                        <p>&nbsp;</p>
                        <p>&nbsp;</p>
                        <p>&nbsp;</p>
                        <p>&nbsp;</p>
                    </div>
                </div>
            </div>
            <div class="footer">
                <!--DO NOT Remove The Footer Links-->
                <!--Designed by--><a href="http://www.htmltemplates.net">
                    <img src="~/images/footnote.gif" class="copyright" alt="html templates">
                </a>
                <p>
                    &copy; Copyright 2010. Designed by <a target="_blank"
                                                          href="http://www.htmltemplates.net">
                        htmltemplates.n

                        et
                    </a>
                    <!--In partnership with--><a href="http://websitetemplates.net">
                        <img src="~/images/footnote.gif" class="copyright"
                             alt="website templates">
                    </a>
                    <!--DO NOT Remove The Footer Links-->
                </p>
            </div>
        </div>
    </div>
</body>
</html>