                        <img src="~/images/footnote.gif" class="copyright"
                             alt="website templates">
                    </a>
                    <!--DO NOT Remove The Footer Links-->
                </p>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Scripts/jquery-1.7.1.intellisense.js"></script>
    <script>

        var x = 0;
        $("#quots").hide();
        function Check() {
            if (x == 0) {
                $("#quots").show("slow");
                x = x + 1;
            }
            else {
                $("#quots").hide("slow");
                x = x - 1;
            }
        }
    </script>

    </body>
</html>
